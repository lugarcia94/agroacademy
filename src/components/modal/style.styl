body
    font-family: 'Montserrat', sans-serif
    overflow-x: hidden !important
    background: #fafafa

.wrapper
    max-width: 1330px
    padding: 0 15px
    margin: 0 auto

.header
    display: flex
    align-items: center
    justify-content: space-between
    max-width: 1330px
    padding: 0 15px
    margin: 0 auto
    padding-top: 30px
    background: #e4e5e2
    box-shadow: 450px 0 #e4e5e2, -450px 0 #e4e5e2

    @media (max-width: 991px)
        box-shadow: none
        flex-wrap: wrap

    *
        z-index: 9

    &__logo
        max-width: 33%
        display: flex
        align-items: center

        @media (max-width: 991px)
            max-width: 100%
            width: 100%
            justify-content: space-between

        a
            max-width: 230px

            @media (max-width: 991px)
                margin: 0 10px

        .blog
            color: #000
            border: 1px solid #000
            border-radius: 25px
            display: block
            width: 80px
            margin-left: 10px
            height: 30px
            text-align: center
            line-height: 30px
            font-size: 15px
            transition: all 150ms ease-in-out

            @media (max-width: 991px)
                margin: 0

            &:hover
                text-decoration: none
                background: #000
                color: #fff

    &__search
        form
            position: relative

        label
            font-weight: 700
            margin-right: 15px
            cursor: pointer

            img
                max-width: 10px
                margin-left: 5px

        input[type=search]
            border-radius: 25px
            width: 210px
            box-shadow: none
            -webkit-appearance: none
            height: 43px
            border: none
            padding-left: 20px
            font-size: 16px
            color: #000

        input[type=submit]
            background-image: url('data:image/png;base64,')
            -webkit-appearance: none
            font-size: 0
            width: 40px
            height: 40px
            background-color: #fff
            border-radius: 25px
            border: none
            position: absolute
            right: 0
            background-size: 90%
            background-position: center
            cursor: pointer

    &__links
        max-width: 200px
        display: flex
        align-items: center

        a
            color: #000
            font-size: 15px

        .active
            color: #000
            border: 1px solid #000
            border-radius: 25px
            display: block
            width: 80px
            margin-left: 10px
            height: 30px
            text-align: center
            line-height: 30px
            font-size: 15px
            transition: all 150ms ease-in-out

            &:hover
                text-decoration: none
                background: #000
                color: #fff

.content
    &__full
        background: #e4e5e2
        position: relative

        .wrapper
            min-height: 92vh

            > .curv
                position: absolute
                left: 0
                max-width: 670px
                bottom: 50px

                @media (max-width: 991px)
                    display: none

        &-right
            z-index: 999
            width: 50%

            @media (max-width: 991px)
                width: 100%
                margin: 100px 0
                text-align: center

        &-left
            .family
                position: absolute
                top: -15%
                max-width: 430px
                left: 15%

            @media (max-width: 991px)
                display: none

            @media (max-width: 991px)
                z-index: 99999
                width: 100%
                text-align: center
                margin: 10px 0

            span
                font-size: 40px
                font-weight: 900
                max-width: 280px
                display: block
                color: #2b374b

                @media (max-width: 991px)
                    max-width: 100%
                    width: 100%

                strong
                    position: relative
                    z-index: 1
                    font-weight: 900

                    &:before
                        content: ''
                        width: 250px
                        height: 18px
                        background: #e76265
                        display: block
                        bottom: 0
                        position: absolute
                        right: 0
                        z-index: -1

            p
                max-width: 640px
                font-size: 18px
                display: block
                margin: 50px 0

                @media (max-width: 991px)
                    text-align: center
                    max-width: 100%

            ul
                list-style-type: none
                display: flex
                max-width: 530px
                justify-content: space-between

                @media (max-width: 991px)
                    max-width: 100%
                    justify-content: center
                    flex-wrap: wrap

                li
                    a
                        background: #00b9d8
                        color: #fff
                        font-size: 15px
                        width: 250px
                        height: 50px
                        text-align: center
                        line-height: 50px
                        font-weight: 700
                        display: block
                        border-radius: 25px
                        border: 1px solid #00b9d8
                        transition: all 150ms ease-in-out

                        @media (max-width: 991px)
                            margin: 10px

                        &:hover
                            text-decoration: none
                            background: #fff
                            color: #00b9d8
                            border: 1px solid #fff

        .wrapper
            display: flex
            justify-content: space-between
            align-items: center

            @media (max-width: 991px)
                flex-wrap: wrap

