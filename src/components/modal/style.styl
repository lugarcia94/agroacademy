                margin: 20px auto
                max-width: 50px

        span
            font-size: 15px
            color: #969696
            text-align: center
            width: 100%
            display: block
            margin-bottom: 10px

        input:not([type='submit'])
            width: 100%
            margin-bottom: 10px
            height: 45px
            background: #ededed
            border-radius: 5px
            border: none
            padding-left: 20px
            color: #969696
            font-size: 15px

        input[type='submit']
            background: #00b9d8
            color: #fff
            font-size: 15px
            border-radius: 25px
            height: 45px
            width: 160px
            margin: 0 auto
            display: block
            border: none
            text-transform: uppercase
            font-weight: 700
            cursor: pointer

            @media (max-width: 991px)
                width: 100%

            &:hover
