body
    font-family: 'Montserrat', sans-serif
    overflow-x: hidden

.wrapper
    max-width: 1330px
    padding: 0 15px
    margin: 0 auto

.header
    display: flex
    align-items: center
    justify-content: space-between
    max-width: 1330px
    padding: 0 15px
    margin: 0 auto
    padding-top: 30px
    background: #e4e5e2
    box-shadow: 450px 0 #e4e5e2, -450px 0 #e4e5e2

    *
        z-index: 9

    &__logo
        max-width: 312px
        display: flex
        align-items: center

        a
            max-width: 230px

        .blog
            color: #000
            border: 1px solid #000
            border-radius: 25px
            display: block
            width: 80px
            margin-left: 10px
            height: 30px
            text-align: center
            line-height: 30px
            font-size: 15px
            transition: all 150ms ease-in-out

            &:hover
                text-decoration: none
                background: #000
                color: #fff

    &__search
        form
            position: relative

        label
            font-weight: 700
            margin-right: 5px

        input[type=search]
            border-radius: 25px
            width: 210px
            box-shadow: none
            -webkit-appearance: none
            height: 43px
            border: none
            padding-left: 20px
            font-size: 16px
            color: #000

        input[type=submit]
            background-image: url('data:image/png;base64,')
            -webkit-appearance: none
            font-size: 0
            width: 40px
            height: 40px
            background-color: #fff
            border-radius: 25px
            border: none
            position: absolute
            right: 0
            background-size: 90%
            background-position: center
            cursor: pointer

    &__links
        max-width: 200px
        display: flex
        align-items: center

        a
            color: #000
            font-size: 15px

        .active
            color: #000
            border: 1px solid #000
            border-radius: 25px
            display: block
            width: 80px
            margin-left: 10px
            height: 30px
            text-align: center
            line-height: 30px
            font-size: 15px
            transition: all 150ms ease-in-out

            &:hover
                text-decoration: none
                background: #000
                color: #fff

.content
    &__full
        background: #e4e5e2
        position: relative

        .wrapper
            min-height: 92vh

            > .curv
                position: absolute
                left: 0
                max-width: 670px
                bottom: 50px

        &-left
            img
                position: absolute
                top: 20%
                max-width: 430px
                left: 17%

            span
                font-size: 40px
                font-weight: 900
                max-width: 280px
                display: block

                strong
                    position: relative
                    z-index: 1
                    font-weight: 900

                    &:before
                        content: ''
                        width: 250px
                        height: 18px
                        background: #e76265
                        display: block
                        bottom: 0
                        position: absolute
                        right: 0
                        z-index: -1

            p
                max-width: 640px
                font-size: 18px
                display: block
                margin: 50px 0

            ul
                list-style-type: none
                display: flex
                max-width: 530px
                justify-content: space-between

                li
                    a
                        background: #00b9d8
                        color: #fff
                        font-size: 15px
                        width: 250px
                        height: 50px
                        text-align: center
                        line-height: 50px
                        font-weight: 700
                        display: block
                        border-radius: 25px
                        border: 1px solid #00b9d8
                        transition: all 150ms ease-in-out

                        &:hover
                            text-decoration: none
                            background: #fff
                            color: #00b9d8
                            border: 1px solid #fff

        .wrapper
            display: flex
            justify-content: space-between
            align-items: center

    &__about
        margin: 90px 0
        position: relative

        ul
            display: flex
            justify-content: space-between
            flex-wrap: wrap
            margin-top: 60px

            li
                width: 32%
                text-align: center

                img
                    max-width: 200px
                    margin: 0 auto

                span
                    font-size: 20px
                    display: block
                    font-weight: 600
                    text-align: center
                    max-width: 270px
                    margin: 0 auto
                    margin: 10px auto
                    height: 50px

                p
                    font-size: 14px
                    font-weight: 500
                    text-align: center
                    padding: 0 35px

        h2
            font-size: 40px
            text-align: center

            strong
                font-weight: 400
                position: relative

                &:before
                    content: ''
                    width: 200px
                    height: 12px
                    background: #e76265
                    display: block
                    bottom: 5px
                    position: absolute
                    right: 0
                    z-index: -1

    &__newsletter
        padding: 70px 0
        background: #e1e5e7
        position: relative

        form
            max-width: 530px
            background: #00b9d8
            padding: 20px 40px
            text-align: center
            border-radius: 10px
            margin: 30px auto
            position: relative

            input
                width: 100%
                height: 40px
                border-radius: 25px
                border: none
                margin-bottom: 10px
                padding-left: 20px
                color: #ccc
                font-size: 15px

            input[type=submit]
                position: absolute
                width: 120px
                right: 40px
                background: #babcbd
                color: #000
                font-size: 17px
                cursor: pointer

                &:hover
                    opacity: 0.8

        h2
            font-size: 30px
            text-align: center

            strong
                font-weight: 400
                position: relative
                z-index: 1

                &:before
                    content: ''
                    width: 190px
                    height: 9px
                    background: #00b9d8
                    display: block
                    bottom: 5px
                    position: absolute
                    right: 0
                    z-index: -1

    &__teacher
        position: relative

        &-depoiment
            strong
                display: block
                text-align: right
                margin: 0
                font-size: 20px
                font-weight: 600

            span
                display: block
                text-align: right
                margin-top: 20px
                font-size: 18px
                font-weight: 600
                text-transform: uppercase

            p
                font-style: italic
                text-transform: uppercase
                text-align: right
                margin: 0 !important

        .wrapper
            display: flex
            height: 100vh
            align-items: center

        &-left
            width: 50%

            img
                max-width: 500px

        &-right
            width: 50%

        h2
            font-size: 26px
            text-align: center
            text-transform: uppercase

            strong
                font-weight: 400
                position: relative
                display: block

                &:before
                    content: ''
                    width: 42%
                    height: 12px
                    background: #78c565
                    display: block
                    bottom: 5px
                    position: absolute
                    right: 0
                    z-index: -1
                    left: 50%
                    transform: translateX(-50%)

        h3
            font-size: 36px
            font-weight: 600
            margin-top: 50px
            max-width: 100%
            line-height: 43px

        p
            font-size: 23px
            margin: 30px 0

        a
            background: #78c565
            width: 280px
            line-height: 50px
            color: #000
            display: block
            border-radius: 25px
            text-align: center
            font-size: 17px
            font-weight: 600
            margin: 30px auto

            &:hover
                text-decoration: none
                opacity: 0.8

    &__student
        position: relative

        .wrapper
            display: flex
            height: 100vh
            align-items: center

        &-left
            width: 50%

            img
                max-width: 500px

        &-right
            width: 50%

        h2
            font-size: 26px
            text-align: left
            text-transform: uppercase

            strong
                font-weight: 400
                position: relative

                &:before
                    content: ''
                    width: 100%
                    height: 12px
                    background: #fcd53e
                    display: block
                    bottom: 5px
                    position: absolute
                    right: 0
                    z-index: -1

        h3
            font-size: 43px
            font-weight: 600
            margin-top: 50px
            max-width: 440px
            line-height: 43px

        p
            font-size: 23px
            margin: 30px 0

        a
            background: #fcd53e
            width: 280px
            line-height: 50px
            color: #000
            display: block
            border-radius: 25px
            text-align: center
            font-size: 17px
            font-weight: 600

            &:hover
                text-decoration: none
                opacity: 0.8

    &__company
        position: relative

        .wrapper
            display: flex
            height: 100vh
            align-items: center

        &-left
            width: 50%

            img
                max-width: 500px

        &-right
            width: 50%

        h2
            font-size: 26px
            text-align: left
            text-transform: uppercase

            strong
                font-weight: 400
                position: relative

                &:before
                    content: ''
                    width: 100%
                    height: 12px
                    background: #12b8dc
                    display: block
                    bottom: 0
                    position: absolute
                    right: 0
                    z-index: -1

        h3
            font-size: 43px
            font-weight: 600
            margin-top: 50px
            max-width: 100%
            line-height: 43px

        p
            font-size: 23px
            margin: 30px 0

        a
            background: #12b8dc
            width: 280px
            line-height: 50px
            color: #000
            display: block
            border-radius: 25px
            text-align: center
            font-size: 17px
            font-weight: 600

            &:hover
                text-decoration: none
                opacity: 0.8

.footer__social
    &-list
        display: flex
        justify-content: space-between
        max-width: 200px
        margin: 0 auto

        li
            width: 53px

.footer__copyright
    text-align: center
    font-weight: 500
    padding: 20px 0
    font-size: 15px

.footer__list-space
    margin-bottom: 30px !important
    display: block

.footer
    background: #e0e4e6
    padding: 100px 0
    position: relative

    &__content
        display: flex

    &__left
        width: 40%

        p
            font-size: 15px

        strong
            display: block
            margin: 20px 0

            a
                color: #12b8dc
                font-size: 16px

    &__right
        width: 40%
        display: flex

        li
            display: block
            margin-bottom: 5px

            a
                font-weight: 600
                color: #000

                &:hover
                    color: #12b8dc
                    text-decoration: none

    .wrapper
        display: flex
        justify-content: space-around
        margin-bottom: 30px

.green
    position: absolute
    right: -15px
    max-width: 450px
    top: -80px
    z-index: 2

.seta
    width: 75px
    bottom: 10px
    z-index: 999
    left: 50%
    transform: translateX(-50%)
    position: absolute
    cursor: pointer
    animation-duration: 0.5s
    animation-name: slidein
    animation-iteration-count: infinite
    animation-direction: alternate

@keyframes slidein
    from
        bottom: 10px

    to
        bottom: 20px

.right__float
    position: absolute
    right: 0
    max-width: 45px
    top: 0

.left__float
    position: absolute
    left: 0
    bottom: 0
    max-width: 45px
    transform: rotate(180deg)

.navigator
    display: flex
    flex-wrap: wrap
    position: fixed
    right: 30px
    max-width: 50px
    top: 50%
    transform: translateY(-50%)

    li
        width: 50px
        height: 25px
        display: block
        margin-bottom: 20px
        text-align: center
        display: flex
        justify-content: center
        border: 1px dashed transparent

        a
            border: 2px solid #000
            display: block
            height: 25px
            width: 25px
            border-radius: 50%

    .active
        border: 1px dashed #000
        width: 50px
        height: 50px
        border-radius: 50%
        display: flex
        align-items: center
        justify-content: center

        a
            background: #000
