            line-height: 43px

        p
            font-size: 20px
            margin: 30px 0

        a
            background: #78c565
            width: 280px
            line-height: 50px
            color: #000
            display: block
            border-radius: 25px
            text-align: center
            font-size: 17px
            font-weight: 600
            margin: 30px auto

            &:hover
                text-decoration: none
                opacity: 0.8

    &__student
        position: relative

        .wrapper
            display: flex
            min-height: 100vh
            align-items: center

            @media (max-width: 991px)
                flex-wrap: wrap

        &-left
            width: 50%

            @media (max-width: 991px)
                width: 100%
                text-align: center

            img
                max-width: 500px

                @media (max-width: 991px)
                    max-width: 100%

        &-right
            width: 50%

            @media (max-width: 991px)
                width: 100%
                text-align: center

        h2
            font-size: 26px
            text-align: left
            text-transform: uppercase

            @media (max-width: 991px)
                text-align: center

            strong
                font-weight: 400
                position: relative

                &:before
                    content: ''
                    width: 100%
                    height: 12px
                    background: #fcd53e
                    display: block
                    bottom: 5px
                    position: absolute
                    right: 0
                    z-index: -1

        h3
            font-size: 43px
            font-weight: 600
            margin-top: 50px
            max-width: 440px
            line-height: 43px

            @media (max-width: 991px)
                max-width: 100%
                text-align: center

        p
            font-size: 20px
            margin: 30px 0

        a
            background: #fcd53e
            width: 280px
            line-height: 50px
            color: #000
            display: block
            border-radius: 25px
            text-align: center
            font-size: 17px
            font-weight: 600

            @media (max-width: 991px)
