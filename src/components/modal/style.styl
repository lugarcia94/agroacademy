.footer__social
    &-list
        display: flex
        justify-content: space-between
        max-width: 200px
        margin: 0 auto

        li
            width: 53px

.footer__copyright
    text-align: center
    font-weight: 500
    padding: 20px 0
    font-size: 15px

.footer__list-space
    margin-bottom: 30px !important
    display: block

.footer
    background: #e0e4e6
    padding: 100px 0
    position: relative

    &__content
        display: flex

    &__left
        width: 40%

        @media (max-width: 767px)
            width: 100%

        p
            font-size: 15px

        strong
            display: block
            margin: 20px 0

            a
                color: #12b8dc
                font-size: 16px

    &__right
        width: 40%
        display: flex

        @media (max-width: 767px)
            width: 100%
            z-index: 99

        li
            display: block
            margin-bottom: 5px

            a
                font-weight: 600
                color: #000

                &:hover
                    color: #12b8dc
                    text-decoration: none

    .wrapper
        display: flex
        justify-content: space-around
        margin-bottom: 30px

        @media (max-width: 767px)
            flex-wrap: wrap

.green
    position: absolute
    right: -15px
    max-width: 450px
    top: -80px
    z-index: 2

.seta
    width: 75px
    bottom: 10px
    z-index: 999
    left: 50%
    transform: translateX(-50%)
    position: absolute
    cursor: pointer
    animation-duration: 0.5s
    animation-name: slidein
    animation-iteration-count: infinite
    animation-direction: alternate

@keyframes slidein
    from
        bottom: 10px

    to
        bottom: 20px

.right__float
    position: absolute
    right: 0
    max-width: 45px
    top: 0

    @media (max-width: 991px)
        z-index: -1

.left__float
    position: absolute
    left: 0
    bottom: 0
    max-width: 45px
    transform: rotate(180deg)

    @media (max-width: 991px)
        z-index: -1

.navigator
    display: flex
    flex-wrap: wrap
    position: fixed
    right: 30px
    max-width: 50px
    top: 50%
    transform: translateY(-50%)
    z-index: 999999999

    @media (max-width: 991px)
        display: none

    li
        width: 35px
        height: 35px
        display: block
        text-align: center
        display: flex
        justify-content: center
        align-items: center
        border: 1px dashed transparent

        a
            border: 2px solid #000
            display: block
            height: 20px
            width: 20px
            border-radius: 50%

    .active
        border: 1px dashed #000
        width: 35px
        height: 35px
        border-radius: 50%
        display: flex
        align-items: center
        justify-content: center

        a
            background: #000

.mobile__only
    display: none

    @media (max-width: 991px)
        display: block

.mobile__menu
    max-width: 60%
    width: 100%
    display: flex
    justify-content: space-between

    .close
        display: none

    > a
        display: none

    @media (max-width: 991px)
        display: block
        position: fixed
        background: #e4e5e2
        height: 100vh
        top: 0
        left: 0
        z-index: 9999999
        padding: 30px 15px
        left: -100%
        transition: all 0.3s ease-in-out
        visibility: hidden

        .close
            display: flex
            align-items: center
            justify-content: center
            position: absolute
            color: #000
            font-weight: 700
            right: 5px
            top: 5px
            width: 30px
            height: 30px
            border-radius: 50%
            border: 1px solid #000

        .header__search
            label
                display: none

            input[type=search]
                width: 100%

        > a
            display: block
            margin-bottom: 10px
            max-width: 255px

        .header__search
            margin-bottom: 20px

        .header__links
            max-width: 100%
            justify-content: space-between

            a
                width: 50%

.on__menu
    .mobile__menu
        left: 0
        visibility: visible

.login__popup
    background: #00000082
    width: 100%
    height: 100%
    z-index: 9999999999
    top: 0
    position: fixed
    visibility: hidden
    opacity: 0
    max-height: 0
    transition: all 0.3s ease-in-out

    &-content
        max-width: 900px
        position: fixed
        left: 50%
        top: 50%
        transform: translate(-50%, -50%)
        display: flex

        @media (max-width: 991px)
            flex-wrap: wrap
            justify-content: space-between
            max-width: 100%
            width: 100%
            padding: 0 15px

    &-left
        width: 50%

        img
            height: 100%
            max-height: 522px

        @media (max-width: 991px)
            display: none

    &-close
        position: fixed
        right: 15px
        top: 15px
        max-width: 20px
        cursor: pointer

        @media (max-width: 991px)
            right: 25px

    &-right
        width: 50%
        background: #fff
        border-top-right-radius: 7px
        border-bottom-right-radius: 7px
        padding: 90px 40px
        max-height: 522px

        @media (max-width: 991px)
            max-height: none
            width: 100%

        h2
            font-size: 30px
            font-weight: 900
            text-align: center

        a
            img
