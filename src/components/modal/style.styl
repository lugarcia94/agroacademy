        .search__input
            position: relative

            @media (max-width: 991px)
                width: 100%

        form
            display: flex
            align-items: center

        label
            font-weight: 700
            margin-right: 15px
            cursor: pointer

            img
                max-width: 10px
                margin-left: 5px
                transition: all 150ms ease-in-out

        input[type=search]
            border-radius: 25px
            width: 210px
            box-shadow: none
            -webkit-appearance: none
            height: 43px
            border: none
            padding-left: 20px
            font-size: 16px
            color: #000

        input[type=submit]
            background-image: url('data:image/png;base64,')
            -webkit-appearance: none
            font-size: 0
            width: 40px
            height: 40px
            background-color: #fff
            border-radius: 25px
            border: none
            position: absolute
            right: 0
            background-size: 90%
            background-position: center
            cursor: pointer

