            &:hover
                text-decoration: none
                opacity: 0.8

    &__company
        position: relative

        .wrapper
            display: flex
            min-height: 100vh
            align-items: center
            flex-wrap: wrap

        &-left
            width: 50%

            @media (max-width: 991px)
                width: 100%
                text-align: center

            img
                max-width: 500px

                @media (max-width: 991px)
                    max-width: 100%

        &-right
            width: 50%

            @media (max-width: 991px)
                width: 100%
                text-align: center

        h2
            font-size: 26px
            text-align: left
            text-transform: uppercase

            @media (max-width: 991px)
                text-align: center

            strong
                font-weight: 400
                position: relative

                &:before
                    content: ''
                    width: 100%
                    height: 12px
                    background: #12b8dc
                    display: block
                    bottom: 0
                    position: absolute
                    right: 0
                    z-index: -1

        h3
            font-size: 43px
            font-weight: 600
            margin-top: 50px
            max-width: 100%
            line-height: 43px

        p
            font-size: 20px
            margin: 30px 0

        a
            background: #12b8dc
            width: 280px
