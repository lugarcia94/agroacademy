    margin: 0 auto
    overflow-x: hidden

.header
    display: flex
    align-items: center
    justify-content: space-between
    max-width: 1330px
    padding: 0 15px
    margin: 0 auto
    min-height: 150px
    background: #e4e5e2
    box-shadow: 450px 0 #e4e5e2, -450px 0 #e4e5e2
    position: relative

    @media (max-width: 991px)
        box-shadow: none
        flex-wrap: wrap
        padding: 15px

    *
        z-index: 9

    &__logo
        max-width: 33%
        display: flex
        align-items: center

        @media (max-width: 991px)
            max-width: 100%
            width: 100%
            justify-content: space-between

        a
            max-width: 230px

            @media (max-width: 991px)
                margin: 0 30px

        .blog
            color: #000
            border: 1px solid #000
            border-radius: 25px
            display: block
            width: 80px
            margin-left: 10px
            height: 30px
            text-align: center
            line-height: 30px
            font-size: 15px
            transition: all 150ms ease-in-out

            @media (max-width: 991px)
                margin: 0

            &:hover
                text-decoration: none
                background: #000
                color: #fff

    &__search
        .menu__content
            min-height: 43px
            line-height: 43px

            .menu__horizontal
                position: absolute
                top: 66%
                background: #fff
                width: 100%
                left: 0
                box-shadow: 1330px 0 #fff, -1330px 0 #fff !important
                display: flex
                justify-content: center
                padding: 40px 0
                min-height: 300px
                display: none

                &:hover
                    display: flex

                ul
                    margin: 0 50px

                    li.sub_title
                        line-height: 25px

                        a
                            font-size: 19px
